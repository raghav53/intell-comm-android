<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_sheet_exit_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/transparent"
    android:elevation="@dimen/_5sdp"
    android:orientation="vertical"
    android:layout_margin="@dimen/_4sdp"
     >

    <LinearLayout

        android:background="@drawable/bg_round_corner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:orientation="vertical">

        <!-- exit the app textview -->
        <TextView
            style="@style/TextViewBold12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
             android:gravity="center"
            android:text="@string/are_you_sure"
            android:textStyle="bold" />

         <TextView
            android:id="@+id/tv_body"
            style="@style/TextViewRegular10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_10sdp"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_4sdp"
            android:hint="You want to delete this Medication ?" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/_3sdp">

            <!-- No  Text View -->
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_7sdp"
                android:background="@drawable/bg_round_corner"
                android:backgroundTint="@color/theme_btn_bg"
                android:elevation="8dp"
                android:gravity="center"
                android:paddingHorizontal="@dimen/_20sdp"
                android:paddingVertical="@dimen/_5sdp"
                android:text="@string/cancel"
                android:textColor="@color/white" />

            <!-- Yes Text View -->
            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_7sdp"
                android:background="@drawable/bg_round_corner"
                android:backgroundTint="#FD0001"
                android:elevation="8dp"
                android:gravity="center"
                android:paddingHorizontal="@dimen/_20sdp"
                android:paddingVertical="@dimen/_5sdp"
                android:text="@string/delete"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>