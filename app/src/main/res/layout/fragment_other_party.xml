<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".views.clientsModule.otherParty.OtherPartyFragment">

    <data>

        <import type="android.view.View" />

        <variable
            name="is_toolbar_back"
            type="boolean" />

        <variable
            name="is_toolbar_title"
            type="boolean" />

        <variable
            name="toolbar_title"
            type="String" />

        <variable
            name="vm"
            type="com.intell.comm.views.clientsModule.otherParty.OtherPartyViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/intro_bg">

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <TextView
                style="@style/TextViewRegular10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:text="@string/select_categories"
                android:textColor="@color/black" />

            <EditText
                style="@style/EditViewMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_bg_white_white"
                android:clickable="true"
                android:drawableEnd="@drawable/ic_down_arrow"
                android:focusable="false"
                android:hint="@string/select_categories"
                android:padding="@dimen/_10sdp" />

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                style="@style/TextViewRegular10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:text="@string/other_party"
                android:textColor="@color/black" />

            <EditText
                style="@style/EditViewMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_bg_white_white"
                android:clickable="true"
                android:drawableEnd="@drawable/ic_down_arrow"
                android:focusable="false"
                android:hint="@string/select_other_party"
                android:padding="@dimen/_10sdp" />


        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_update"
            style="@style/Theme.Button"
            android:layout_alignParentBottom="true"
            android:layout_marginVertical="@dimen/_20sdp"
            android:onClick="@{(v)->vm.onClick(v)}"
            android:text="@string/update" />
    </RelativeLayout>
</layout>