<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="position"
            type="Integer" />

        <variable
            name="model"
            type="com.intell.comm.base.model.BaseModel" />

        <variable
            name="callback"
            type="com.intell.comm.base.views.adapter.OnItemClickListener" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_3sdp"
        android:layout_marginVertical="@dimen/_5sdp"
        android:background="@drawable/edit_bg_white_white"
        android:elevation="@dimen/_3sdp"
        android:orientation="vertical"
        android:paddingVertical="@dimen/_5sdp">


        <TextView
            android:id="@+id/tv_name"
            style="@style/TextViewMedium12"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingStart="@dimen/_10sdp"
            android:text="@{model.string1, default=Title}"
            android:textColor="@color/btn_text_color" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_10sdp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextViewRegular8"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="@string/client_name_"
                    android:textColor="@color/list_small_text_color" />

                <TextView
                    android:id="@+id/tv_medicine_quantity"
                    style="@style/TextViewRegular8"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_toEndOf="@+id/tv_sub"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@{model.string2, default=Name}"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextViewRegular8"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="@string/request_to_"
                    android:textColor="@color/list_small_text_color" />

                <TextView
                    android:id="@+id/tv_medicine_units"

                    style="@style/TextViewRegular8"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@{model.string3, default=Test}"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_10sdp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextViewRegular8"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="@string/created_date_"
                    android:textColor="@color/list_small_text_color" />

                <TextView
                    android:id="@+id/tv_med_report"
                    style="@style/TextViewRegular8"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@{model.string4, default=Date}"
                    android:textColor="@color/black" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_10sdp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextViewRegular8"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="@string/reason_"
                    android:textColor="@color/list_small_text_color" />

                <TextView
                    style="@style/TextViewRegular8"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@{model.string5, default=Test}"
                    android:textColor="@color/black" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_marginStart="10dp"
            android:gravity="start"
            android:orientation="horizontal">


            <TextView
                style="@style/TextViewRegular8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_3sdp"
                android:background="@drawable/btn_green_green"
                android:backgroundTint="@color/dark_orange"
                android:elevation="@dimen/_3sdp"
                android:gravity="center"
                android:paddingHorizontal="@dimen/_15sdp"
                android:paddingVertical="@dimen/_5sdp"
                android:text="@string/under_review"
                android:textColor="@color/white" />

            <TextView
                style="@style/TextViewRegular8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_3sdp"
                android:background="@drawable/btn_green_green"
                android:backgroundTint="@color/theme_btn_bg"
                android:elevation="@dimen/_3sdp"
                android:gravity="center"
                android:paddingHorizontal="@dimen/_15sdp"
                android:paddingVertical="@dimen/_5sdp"
                android:text="@string/approve"
                android:textColor="@color/white" />

            <TextView
                style="@style/TextViewRegular8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_3sdp"
                android:background="@drawable/btn_green_green"
                android:backgroundTint="@color/dark_red"
                android:elevation="@dimen/_3sdp"
                android:gravity="center"
                android:paddingHorizontal="@dimen/_25sdp"
                android:paddingVertical="@dimen/_5sdp"
                android:text="@string/deny"
                android:textColor="@color/white" />

        </LinearLayout>
    </LinearLayout>

</layout>